// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  docs     Doc[]
}

model Doc {
  id     String  @id @default(uuid())
  title  String
  slug   String
  author User    @relation(fields: [userId], references: [id])
  userId String
  steps  Step[]
  inputs Input[]

  @@unique([slug, userId])
  @@index([title, slug])
}

model Step {
  id    String @id @default(uuid())
  title String
  order Int
  doc   Doc    @relation(fields: [docId], references: [id])
  docId String
  tasks Task[]
}

model Task {
  id         String    @id @default(uuid())
  order      Int
  intro      String
  language   Language? @relation(fields: [languageId], references: [id])
  input      String
  output     String?
  step       Step      @relation(fields: [stepId], references: [id])
  stepId     String
  languageId String
}

model Input {
  id    String @id @default(uuid())
  label String
  name  String
  value String
  doc   Doc    @relation(fields: [docId], references: [id])
  docId String
}

model Language {
  id     String  @id @default(uuid())
  name   String
  prompt String?
  Task   Task[]
}
